<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.ozge.bitirme.BabyWirstband.MainActivity"
    android:background="@color/colorBackgrounColor">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ozge.bitirme.BabyWirstband.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:id="@+id/linearLayout"
            android:weightSum="1">

            <Button
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btnConnect"
                android:onClick="goConnect"
                android:text="CONNECT"
                android:textColor="@color/colorText"
                android:background="@color/colorAccent"
                android:drawableTop="@drawable/ic_connect"
                android:textSize="18dp"
                android:textStyle="italic"/>
            <Button
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:id="@+id/btnbabyInformation"
                android:onClick="goBabyInformation"
                android:text="ENTER INFORMATION"
                android:drawableTop="@drawable/ic_babyinfo"
                android:background="@color/colorAccent"
                android:layout_gravity="bottom"
                android:textColor="@color/colorText"
                android:layout_weight="0.94"
                android:textSize="18dp"
                android:textStyle="italic"/>
            <Button
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:id="@+id/btnHistory"
                android:onClick="goHistory"
                android:text="HISTORY"
                android:textColor="@color/colorText"
                android:drawableTop="@drawable/ic_historybtn"
                android:background="@color/colorAccent"
                android:textSize="18dp"
                android:textStyle="italic" />

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/splashscreen"
            android:src="@drawable/ic_action_name"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/linearLayout" />

    </RelativeLayout>
</RelativeLayout>
