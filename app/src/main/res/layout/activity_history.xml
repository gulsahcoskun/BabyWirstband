<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:weightSum="100"
        android:id="@+id/linearLayout">

        <Button
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="125dp"
            android:layout_height="95dp"
            android:id="@+id/btnSleep"
            android:onClick=""
            android:text="Sleep"
            android:drawableTop="@mipmap/ic_babybtn"
            android:background="@color/colorAccent"/>
        <Button
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="125dp"
            android:layout_height="95dp"
            android:id="@+id/btnPulse"
            android:onClick=""
            android:text="Pulse"
            android:drawableTop="@mipmap/ic_pulsebtn"
            android:background="@color/colorAccent"/>
        <Button
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="125dp"
            android:layout_height="95dp"
            android:id="@+id/btnTemprature"
            android:onClick=""
            android:text="Temprature"
            android:drawableTop="@mipmap/ic_tempraturebtn"
            android:background="@color/colorAccent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:weightSum="100"
        android:id="@+id/linearLayoutlist">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listState"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>


</LinearLayout>